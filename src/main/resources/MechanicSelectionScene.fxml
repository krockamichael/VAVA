                </TableView>
                <Button fx:id="mechSel_search_btn" layoutX="335.0" layoutY="26.0" mnemonicParsing="false" onAction="#filterMechanic" prefWidth="80.0" style="-fx-background-color: #23272a;" text="Search" textFill="#99aab5" />
