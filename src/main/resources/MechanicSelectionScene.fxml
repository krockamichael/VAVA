                <Label fx:id="mechSel_surname_label" layoutX="176.0" layoutY="10.0" text="Surname :" textFill="#99aab5" />
                <Label fx:id="mechSel_name_label" layoutX="29.0" layoutY="10.0" text="Name :" textFill="#99aab5" />
                <TextField fx:id="nameTextReward" layoutX="29.0" layoutY="26.0" prefHeight="25.0" prefWidth="125.0" />
                <TextField fx:id="surnameTextReward" layoutX="176.0" layoutY="26.0" prefHeight="25.0" prefWidth="125.0" />
            <Label fx:id="mechSel_results_label" layoutX="29.0" layoutY="64.0" text="Results :" textFill="#99aab5" />
            </children></Pane>
    </children>
