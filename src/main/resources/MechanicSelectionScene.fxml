<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="402.0" prefWidth="445.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Autoservis.controller.MainController">
    <children>
        <Pane prefHeight="27.0" prefWidth="445.0" style="-fx-background-color: #23272a;">
            <children>
                <Button layoutX="414.0" layoutY="1.0" mnemonicParsing="false" onAction="#closeStageAction" prefHeight="9.0" prefWidth="25.0" style="-fx-background-color: #23272a;" text="X" textFill="#99aab5">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Label fx:id="mechSel_title_label" layoutX="169.0" layoutY="5.0" text="Mechanic selection" textFill="#99aab5" />
            <Button layoutY="1.0" mnemonicParsing="false" onAction="#mechSel_changeToEnglishLang" style="-fx-background-color: #23272a;" text="EN" textFill="#99aab5" />
            <Button layoutX="31.0" layoutY="1.0" mnemonicParsing="false" onAction="#mechSel_changeToSlovakLang" style="-fx-background-color: #23272a;" text="SK" textFill="#99aab5" />
            </children></Pane>
